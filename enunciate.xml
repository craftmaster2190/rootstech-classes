<?xml version="1.0" encoding="UTF-8"?>
<enunciate xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://enunciate.webcohesion.com/schemas/enunciate-2.15.0.xsd">

  <title>RootsTech XXXX Classes</title>

  <description package="com.craftmaster2190.rootstechclasses">
    <![CDATA[
      <pre>
      <h1>RootsTech XXXX Classes</h1>
      You are probably looking for a printout of the classes for RootsTech XXXX.
      <a href="/xlsx">/xlsx</a>
      <a href="/csv">/csv</a>
      <a href="/json">/json</a>

      Not affiliated with <a href="//rootstech.org" target="_blank">RootsTech</a> or <a href="//familysearch.org" target="_blank">FamilySearch</a>.
      Source code: <a href="https://github.com/craftmaster2190/rootstech-classes" target="_blank">https://github.com/craftmaster2190/rootstech-classes</a>
      </pre>
      <script>
        // Kind of a hack: fetch the year from the API and replace all instances of XXXX in the page
        fetch('/rootstech-year')
          .then(response => response.text())
          .then(year => {
            document.body.innerHTML = document.body.innerHTML.replaceAll('XXXX', year);
            document.title = document.title.replace('XXXX', year);
          });
      </script>
    ]]>
  </description>

  <api-classes>
    <include pattern="com.craftmaster2190.rootstechclasses.**"/>
  </api-classes>

  <modules disabledByDefault="true">
    <docs disabled="false"/>
    <jackson disabled="false"/>
    <spring-web disabled="false"/>
    <swagger disabled="false"/>
    <lombok disabled="false"/>
  </modules>
</enunciate>
